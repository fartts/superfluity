{
  "name": "@fartts/superfluity",
  "version": "1.8.0",
  "description": "Neon has the unique quality of representing contrasting ideas about our future. In form and in color, its natural hues represent an optimistic and technologically-fueled tomorrow. Simultaneously, its past applications are fading into ruin, marking failed attempts at establishing utopia. Through medium and metaphor, the artists in NEON explore this strange duality.",
  "repository": "https://github.com/fartts/superfluity.git",
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf .cache/ coverage/ dist/ node_modules/",
    "build": "parcel build src/**/*.html --public-url /superfluity --experimental-scope-hoisting",
    "start": "parcel src/**/*.html",
    "lint": "tslint 'src/**/*.ts'",
    "test": "jest",
    "coverage": "open coverage/lcov-report/index.html"
  },
  "engines": {
    "node": "10.13.0",
    "npm": "6.4.1",
    "yarn": "1.12.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cardboard-vr-display": "1.0.16",
    "firebase": "5.8.2",
    "qrcode": "1.3.3",
    "simple-peer": "9.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-typescript": "7.1.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/commit-analyzer": "6.1.0",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/github": "5.2.10",
    "@semantic-release/npm": "5.1.4",
    "@semantic-release/release-notes-generator": "7.1.4",
    "@types/jest": "24.0.4",
    "@types/node": "10.12.21",
    "@types/qrcode": "1.3.0",
    "@types/simple-peer": "6.1.5",
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "glslify-bundle": "5.1.1",
    "glslify-deps": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "parcel-bundler": "1.11.0",
    "prettier": "1.16.4",
    "semantic-release": "15.12.0",
    "semantic-release-github-pr": "5.1.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.3.1"
  }
}
