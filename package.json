{
  "name": "@fartts/superfluity",
  "version": "1.9.0",
  "description": "Neon has the unique quality of representing contrasting ideas about our future. In form and in color, its natural hues represent an optimistic and technologically-fueled tomorrow. Simultaneously, its past applications are fading into ruin, marking failed attempts at establishing utopia. Through medium and metaphor, the artists in NEON explore this strange duality.",
  "repository": "https://github.com/fartts/superfluity.git",
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "reset": "yarn clean node_modules/ && yarn install",
    "clean": "rm -rf .cache/ coverage/ dist/",
    "build": "parcel build src/**/*.html --public-url /superfluity --experimental-scope-hoisting",
    "start": "parcel src/**/*.html --https",
    "lint": "tslint 'src/**/*.ts'",
    "test": "jest",
    "coverage": "open coverage/lcov-report/index.html"
  },
  "engines": {
    "node": "10.16.0",
    "npm": "6.10.1",
    "yarn": "1.17.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cardboard-vr-display": "1.0.16",
    "firebase": "6.4.1",
    "qrcode": "1.4.1",
    "simple-peer": "9.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-typescript": "7.3.3",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.3.0",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.4.3",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.3.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@types/qrcode": "1.3.4",
    "@types/simple-peer": "6.1.6",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "glslify-bundle": "5.1.1",
    "glslify-deps": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.9.0",
    "parcel-bundler": "1.12.3",
    "prettier": "1.18.2",
    "semantic-release": "15.13.21",
    "semantic-release-github-pr": "https://github.com/mysterycommand/semantic-release-github-pr.git#fix/34-and-35",
    "ts-jest": "24.0.2",
    "tslint": "5.19.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.3"
  }
}
